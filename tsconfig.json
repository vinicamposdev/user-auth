{
  "compilerOptions": {
    "outDir": "dist",
    "rootDirs": ["src", "tests"],
    "baseUrl": "./src",
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["../src/*"],
    },
    "sourceMap": true,
    "declaration": false,
    "module": "node16",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"],
    "target": "es6",
    "esModuleInterop": true,
    "lib": ["esnext"]
  },
  "exclude": ["node_modules"]
}
