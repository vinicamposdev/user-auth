{
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"],
    "target": "es6",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "paths": {
      "@/tests/*": ["tests/*"],
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"]
}
    